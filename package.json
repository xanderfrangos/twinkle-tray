{
  "name": "twinkle-tray",
  "version": "1.15.0",
  "description": "Manage the brightness of monitors from your system tray",
  "main": "src/electron.js",
  "scripts": {
    "parcel": "parcel src/html/*.html --port 3000 --out-dir cache",
    "parcel-build": "del /q build && parcel build src/html/*.html --out-dir build --public-url ./ --experimental-scope-hoisting --no-source-maps",
    "dev": "wait-on http://localhost:3000/index.html && electron . --dev",
    "electron-build": "electron-builder --x64",
    "postinstall": "electron-builder install-app-deps",
    "appx": "npm rebuild && npm run parcel-build && electron-builder --x64 -w appx -c.extraMetadata.name=twinkle-tray-appx -c.win.artifactName=\"${productName} v${version}-store.${ext}\"",
    "appx-unsigned": "npm rebuild && npm run parcel-build && electron-builder --x64 -w appx -c.appx.publisher=\"CN=AppModelSamples, OID.2.25.311729368913984317654407730594956997722=1\" -c.extraMetadata.name=twinkle-tray-appx -c.win.artifactName=\"${productName} v${version}-unsigned.${ext}\"",
    "portable": "npm rebuild && npm run parcel-build && electron-builder --x64 -w zip -c.extraMetadata.name=twinkle-tray-portable -c.win.artifactName=\"${productName} v${version}-portable.${ext}\" -c.win.compression=normal",
    "arm64": "npm rebuild && npm run parcel-build && electron-builder --arm64 -c.extraMetadata.name=twinkle-tray-arm64 -c.win.artifactName=\"${productName} v${version}-arm64.${ext}\" -c.win.compression=normal",
    "rebuild-ddcci-dev": "electron-rebuild -f -w @hensm/ddcci",
    "appx-arm64": "npm rebuild && npm run parcel-build && electron-builder --arm64 -w appx -c.extraMetadata.name=twinkle-tray-appx -c.win.artifactName=\"${productName} v${version}-store-arm64.${ext}\"",
    "build": "npm run parcel-build && npm rebuild && npm run electron-build",
    "start": "concurrently \"npm run parcel\" \"npm run dev\"",
    "test-wmibridge": "node src/modules/wmi-bridge/example.js"
  },
  "keywords": [
    "electron",
    "react",
    "brightness",
    "set-brightness",
    "windows"
  ],
  "author": "Xander Frangos",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@hensm/ddcci": "^0.1.0",
    "color": "^3.1.3",
    "electron-winstore-auto-launch": "^2.0.6",
    "global-mouse-events": "^1.1.0",
    "markdown-to-jsx": "^7.1.7",
    "native-reg": "^1.1.0",
    "node-fetch": "^2.6.1",
    "setwindowpos-binding": "file:src/modules/setwindowpos",
    "acrylic": "file:src/modules/acrylic",
    "sharp": "^0.30.7",
    "universal-analytics": "^0.4.23",
    "win32-displayconfig": "^0.1.0",
    "windows-accent-colors": "^1.0.0",
    "wmi-bridge": "file:src/modules/wmi-bridge",
    "wmi-client": "^0.5.0"
  },
  "build": {
    "productName": "Twinkle Tray",
    "appId": "com.xanderfrangos.twinkle-tray",
    "compression": "maximum",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "src/electron.js",
      "src/panel-preload.js",
      "src/Translate.js",
      "src/settings-preload.js",
      "src/intro-preload.js",
      "src/known-ddc-brightness-codes.json",
      "src/localization/*",
      "src/Utils.js",
      "src/Monitors.js",
      "src/wmi-bridge-test.js",
      "src/assets/tray-icons/dark/*",
      "src/assets/tray-icons/light/*",
      "build/**/*",
      "!node_modules/@hensm/ddcci/build",
      "node_modules/@hensm/ddcci/build/Release/ddcci.node",
      "!node_modules/node-addon-api/doc",
      "!node_modules/win32-displayconfig/node_modules*",
      "!node_modules/global-mouse-events/node_modules",
      "!node_modules/electron-acrylic-window/node_modules",
      "!node_modules/setwindowpos-binding/node_modules",
      "!node_modules/windows-accent-colors/node_modules",
      "!node_modules/**/node-gyp/*",
      "!node_modules/**/*.ipdb",
      "!node_modules/**/*.iobj",
      "!node_modules/**/*.h",
      "!node_modules/**/*.md",
      "!node_modules/**/*.c",
      "!node_modules/**/*.map",
      "!node_modules/**/*.log",
      "!node_modules/**/*.tlog",
      "!node_modules/**/*.vcxproj",
      "!node_modules/**/*.filters"
    ],
    "extraResources": [
      "node_modules\\wmi-client\\**\\*",
      "!node_modules\\wmi-client\\bin"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName} v${version}.${ext}",
      "icon": "src/assets/logo.ico",
      "publisherName": "Xander Frangos"
    },
    "appx": {
      "publisherDisplayName": "Xander Frangos",
      "applicationId": "TwinkleTray",
      "displayName": "Twinkle Tray",
      "identityName": "38002AlexanderFrangos.TwinkleTray",
      "publisher": "CN=B8E9A58B-32A7-4C6C-A474-D4BE2A3CEAD8",
      "showNameOnTiles": false,
      "backgroundColor": "#6b479c"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "include": "resources/nsis/installer.nsh",
      "warningsAsErrors": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.13.8",
    "@babel/preset-react": "^7.12.13",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^20.3.6",
    "electron-builder": "^23.6.0",
    "parcel-bundler": "^1.12.5",
    "react": "^17.0.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.0",
    "sass": "^1.54.0",
    "wait-on": "^5.3.0"
  }
}
